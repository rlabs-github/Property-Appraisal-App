# Backend Production Dockerfile (docker/backend/Dockerfile.prod)
FROM node:20-alpine AS backend

WORKDIR /app

RUN npm install -g npm@latest

# Copy package.json first
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application source... everything from backend folder (not into src)
COPY . .

# Build the backend
RUN npm run build

EXPOSE 4000

CMD ["npm", "start"]
